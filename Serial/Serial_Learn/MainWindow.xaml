<Window
    x:Class="Serial_Learn.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Serial_Learn"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="600"
    mc:Ignorable="d">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <local:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <GroupBox
                Margin="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Header="串口设置"
                Style="{x:Null}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="COM" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{Binding COMList}"
                        SelectedItem="{Binding COM}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="波特率" />
                    <ComboBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{local:EnumBindingSource EnumType=local:BaudRate}"
                        SelectedIndex="5"
                        SelectedItem="{Binding BaudRate}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="数据位" />
                    <ComboBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{local:EnumBindingSource EnumType=local:DataBits}"
                        SelectedIndex="3"
                        SelectedItem="{Binding DataBits}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="停止位" />
                    <ComboBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{local:EnumBindingSource EnumType=local:StopBit}"
                        SelectedItem="{Binding StopBit}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="校验位" />
                    <ComboBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5"
                        ItemsSource="{local:EnumBindingSource EnumType=local:Parity}"
                        SelectedItem="{Binding Parity}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <StackPanel
                        Grid.Row="6"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Ellipse
                            Width="12"
                            Height="12"
                            Margin="5"
                            VerticalAlignment="Center">
                            <Ellipse.ToolTip>
                                <ToolTip>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="串口未连接" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                        <Setter Property="Text" Value="串口已连接" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                                        <Setter Property="Text" Value="串口未连接" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </ToolTip>
                            </Ellipse.ToolTip>
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="Red" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Fill" Value="Green" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                            <Setter Property="Fill" Value="Red" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <Button Margin="15" Command="{Binding ToggleConnectionCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Content" Value="连接串口" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Content" Value="断开串口" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <GroupBox
            Grid.Column="1"
            Height="250"
            Margin="10"
            Padding="10"
            VerticalAlignment="Top"
            Header="单光源设定"
            Style="{x:Null}">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="当前光源" />
                    <ComboBox
                        MinWidth="200"
                        Margin="5"
                        VerticalAlignment="Center"
                        ItemsSource="{local:EnumBindingSource EnumType=local:LightNo}"
                        SelectedIndex="5"
                        SelectedItem="{Binding LightNo}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="R" />
                    <Slider
                        x:Name="slider_R"
                        MinWidth="200"
                        Margin="5"
                        VerticalAlignment="Center"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding ColorR}" />
                    <hc:NumericUpDown
                        MinWidth="100"
                        Margin="15,5,0,5"
                        DecimalPlaces="0"
                        Increment="1"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding ElementName=slider_R, Path=Value, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="G" />
                    <Slider
                        x:Name="slider_G"
                        MinWidth="200"
                        Margin="5"
                        VerticalAlignment="Center"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding ColorG}" />
                    <hc:NumericUpDown
                        MinWidth="100"
                        Margin="15,5,0,5"
                        DecimalPlaces="0"
                        Increment="1"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding ElementName=slider_G, Path=Value, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="B" />
                    <Slider
                        x:Name="slider_B"
                        MinWidth="200"
                        Margin="5"
                        VerticalAlignment="Center"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding ColorB}" />
                    <hc:NumericUpDown
                        MinWidth="100"
                        Margin="15,5,0,5"
                        DecimalPlaces="0"
                        Increment="1"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding ElementName=slider_B, Path=Value, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Margin="5"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Margin="40,5"
                        Command="{Binding OpenLightCommand}"
                        Content="打开光源" />
                    <Button
                        Margin="40,5"
                        Command="{Binding CloseLightCommand}"
                        Content="关闭光源" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <local:BindableRichTextBox Document="{Binding ReceivedDocument, Mode=OneWay}" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding SendContent, Mode=OneWayToSource}" />
                <Button
                    Grid.Column="1"
                    Command="{Binding SendCommand}"
                    Content="发送" />
            </Grid>
        </Grid>

    </Grid>
</Window>
