<Window
    x:Class="INotifyPropertyChanged_.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:INotifyPropertyChanged_"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel>
                <Slider
                    x:Name="slider"
                    Height="30"
                    Margin="5"
                    ValueChanged="Slider_ValueChanged" />
                <TextBox
                    x:Name="textbox1"
                    Height="30"
                    Margin="5"
                    TextChanged="textbox1_TextChanged" />
            </StackPanel>
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <Slider
                    x:Name="slider2"
                    Height="30"
                    Margin="5"
                    ValueChanged="Slider_ValueChanged" />
                <TextBox Text="{Binding ElementName=slider2, Path=Value, Mode=Default}" />
            </StackPanel>
            <!--  注意一下绑定的几种mode吧，没什么营养  -->
        </Grid>

        <Grid Grid.Row="1" Margin="0,50,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="5"
                    Text="{Binding Name}" />
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="5"
                    Text="{Binding Title}" />
                <Button
                    Width="30"
                    Height="30"
                    Margin="5"
                    Command="{Binding ShowCommand}"
                    Content="here" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>


