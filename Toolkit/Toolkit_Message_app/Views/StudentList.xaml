<UserControl
    x:Class="Toolkit_Message_app.Views.StudentList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Toolkit_Message_app.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:Toolkit_Message_app.ViewModels"
    d:DesignHeight="300"
    d:DesignWidth="250"
    mc:Ignorable="d">
    <DockPanel>
        <ToggleButton
            HorizontalAlignment="Left"
            Content="Allow Adding"
            DockPanel.Dock="Top"
            IsChecked="{Binding AllowNew}"
            Style="{StaticResource ToggleButtonSwitch}" />
        <hc:TextBox
            Margin="0,10"
            hc:TitleElement.Title="Student Count"
            hc:TitleElement.TitlePlacement="Left"
            DockPanel.Dock="Top"
            IsReadOnly="True"
            Text="{Binding StudentCount, Mode=OneWay}" />
        <ListBox
            Grid.Row="2"
            hc:TitleElement.Title="Student List"
            ItemsSource="{Binding Students}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0}, {1}, {2}">
                                <Binding Path="Name" />
                                <Binding Path="Class" />
                                <Binding Path="Phone" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
